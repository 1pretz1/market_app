<div align="center">
  <%= form_for @product do |f| %>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_field :description %>
    </p>
    <p>
      <%= f.label :category %><br/>
      <%= f.text_field :category %>
    </p>
     <p>
      <%= f.label :price %><br/>
      <%= f.text_field :price %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
